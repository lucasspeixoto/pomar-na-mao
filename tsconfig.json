/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@utils/*": [
                "./src/app/utils/*"
            ],
            "@env/*": [
                "./src/environments/*"
            ],
            "@sharedC/*": [
                "./src/app/shared/components/*"
            ],
            "@sharedS/*": [
                "./src/app/shared/services/*"
            ],
            "@sharedP/*": [
                "./src/app/shared/pages/*"
            ],
            "@sharedCs/*": [
                "./src/app/shared/constants/*"
            ],
            "@sharedPp/*": [
                "./src/app/shared/pipes/*"
            ],
            "@sharedU/*": [
                "./src/app/shared/utils/*"
            ],
            "@layoutC/*": [
                "./src/app/layout/components/*"
            ],
            "@layoutS/*": [
                "./src/app/layout/services/*"
            ],
            "@collectC/*": [
                "./src/app/features/collect/components/*"
            ],
            "@collectS/*": [
                "./src/app/features/collect/services/*"
            ],
            "@collectV/*": [
                "./src/app/features/collect/views/*"
            ],
            "@collectCs/*": [
                "./src/app/features/collect/constants/*"
            ],
            "@collectM/*": [
                "./src/app/features/collect/models/*"
            ],
            "@collectU/*": [
                "./src/app/features/collect/utils/*"
            ],
            "@offcollectV/*": [
                "./src/app/features/offline-collect/views/*"
            ],
            "@authS/*": [
                "./src/app/auth/services/*"
            ],
            "@authC/*": [
                "./src/app/auth/components/*"
            ],
            "@authV/*": [
                "./src/app/auth/view/*"
            ],
            "@authCs/*": [
                "./src/app/auth/constants/*"
            ],
            "@authG/*": [
                "./src/app/auth/guards/*"
            ]
        },
        "outDir": "./dist/out-tsc",
        "strict": true,
        "types": [
            "jasmine",
            "node"
        ],
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "moduleResolution": "bundler",
        "importHelpers": true,
        "target": "ES2022",
        "module": "ES2022",
        "allowSyntheticDefaultImports": true,
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}